<div class="container-inner">
	<h1>Standard</h1>
</div>
<div class="container-inner">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<div class="blog">
				{{# each data.posts.results}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post underline">
					<h2><a href="{{standardPostUrl slug}}">{{{title}}}</a></h2>
					{{!--<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p>--}}
					{{#if image}}<img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}" class="img pull-right">{{/if}}
					<p>{{{content.brief}}}</p>
					{{#if content.extended}}<p class="read-more"><a href="{{standardPostUrl slug}}">MORE</a></p>{{/if}}
				</div>
				{{/each}}
			</div>
		</div>
		<div class="col-sm-4 col-md-3">  
			<div style="margin-top: 70px;" class="list-group">
				<a href="/standard" class="active list-group-item">All</a>
				{{# each data.categories }}
				<a href="{{standardCategoryUrl key}}" class="false list-group-item">{{name}}</a>
				{{/each}}
			</div>
		</div>
	</div>
	{{>standardpagination}}
</div>