<div class="container-inner">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back</a></p>
				<hr>
				<header>
					<h1>{{data.standard.title}}</h1>
					<h5>
						{{{categoryList data.standard.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.standard.image}}<img src="{{{cloudinaryUrl data.standard.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					<p>{{{data.standard.content.extended}}}</p>
				</div>
			</article>
		</div>
	</div>
</div>
